@{
    ViewData["Title"] = "Home Page";
}
    <div id="myMap"></div>

    <script type="text/javascript">

    var map = new atlas.Map('myMap', {
        center: [-122.33, 47.6],
        zoom: 12,
        language: 'en-US',
        authOptions: {
            authType: 'subscriptionKey',
            subscriptionKey: 'WiFaEptwlfYBRP9pvaZc-QxO5bxxaHYpgQGaK-1CdzQ'
        }
    });

        var pins = JSON.parse('[{"lat": 0, "long": 0, "text": "A", "message": "my message"},'
                              +'{"lat": 10, "long": 10,"text": "B", "message": "my message 2" }]');

        pins.forEach(function (pin) {
            //Create a HTML marker and add it to the map.
            var marker = new atlas.HtmlMarker({
                color: 'DodgerBlue',
                text: pin.text,
                position: [pin.lat, pin.long],
                popup: new atlas.Popup({
                    content: '<div style="padding:10px">' + pin.message + '</div>',
                    pixelOffset: [0, -30]
                })
            });

            map.markers.add(marker);

            //Add a click event to toggle the popup.
            map.events.add('click',marker, () => {
                marker.togglePopup();
            });
        });

                     
    </script>